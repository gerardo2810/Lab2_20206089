<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".GameActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/ivHangmanBase"
        android:layout_width="120dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/antena_sinfondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivHangmanHead"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/head1_sinfondo"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/ivHangmanBase"
        app:layout_constraintStart_toStartOf="@+id/ivHangmanBase"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/ivHangmanTorso"
        android:layout_width="35dp"
        android:layout_height="100dp"
        android:src="@drawable/torso_sinfondo"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/ivHangmanHead"
        app:layout_constraintStart_toStartOf="@+id/ivHangmanBase"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/ivHangmanArmRight"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/brazodere_piernaizq"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/ivHangmanTorso"
        app:layout_constraintStart_toStartOf="@+id/ivHangmanBase"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/ivHangmanArmLeft"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/brazoizq_piernadere_sinfondo"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/ivHangmanTorso"
        app:layout_constraintStart_toStartOf="@+id/ivHangmanBase"
        app:layout_constraintHorizontal_bias="1.0" />


    <ImageView
        android:id="@+id/ivHangmanLegLeft"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/brazodere_piernaizq_sinfondo"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/ivHangmanTorso"
        app:layout_constraintStart_toStartOf="@+id/ivHangmanBase"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/ivHangmanLegRight"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/brazoizq_piernadere_sinfondo"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/ivHangmanTorso"
        app:layout_constraintStart_toStartOf="@+id/ivHangmanBase"
        app:layout_constraintHorizontal_bias="1.0" />

    <GridLayout
        android:id="@+id/gridLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="6"
        app:layout_constraintTop_toBottomOf="@id/ivHangmanBase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="7"
        app:layout_constraintTop_toBottomOf="@id/gridLines"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnA"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="A"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>

        <Button
            android:id="@+id/btnB"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="B"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>

        <Button
            android:id="@+id/btnC"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="C"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>

        <Button
