            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="F"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>

        <Button
            android:id="@+id/btnG"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="G"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>

        <Button
            android:id="@+id/btnH"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="H"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>
        <Button
            android:id="@+id/btnI"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="I"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>
        <Button
            android:id="@+id/btnJ"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="J"
