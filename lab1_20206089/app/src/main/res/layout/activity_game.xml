            android:backgroundTint="@android:color/white"/>
        <Button
            android:id="@+id/btnS"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="S"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>
        <Button
            android:id="@+id/btnT"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="T"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>
        <Button
            android:id="@+id/btnU"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="U"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"/>
        <Button
            android:id="@+id/btnV"
            android:layout_width="60dp"
            android:layout_height="48dp"
